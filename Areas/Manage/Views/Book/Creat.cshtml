@model book
@{
    ViewData["Title"] = "Creat";
}

<h1>Creat a Book</h1>

<form method="post" asp-action="creat" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="mb-3 col-md-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="Code" class="form-label">Code</label>
                <input type="text" class="form-control" id="Code" asp-for="Code" placeholder="Code">
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="CostPrice" class="form-label">CostPrice</label>
                <input type="text" class="form-control" id="CostPrice" asp-for="CostPrice" placeholder="CostPrice">
                <span asp-validation-for="CostPrice" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="SalePrice" class="form-label">SalePrice</label>
                <input type="text" class="form-control" id="SalePrice" asp-for="SalePrice" placeholder="SalePrice">
                <span asp-validation-for="SalePrice" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 col-md-3">
            <label asp-for="Desc" class="form-label">Desc</label>
            <textarea style="height:100px; width:300px" class="form-control" id="Desc" asp-for="Desc" placeholder="Desc"></textarea>
            <span asp-validation-for="Desc" class="text-danger"></span>
        </div >
        <div class="mb-3 col-md-3" >
                <label asp-for="DiscountPrice" class="form-label">DiscountPrice</label>
                <input type="text" class="form-control" id="DiscountPrice" asp-for="DiscountPrice" placeholder="DiscountPrice">
            <span asp-validation-for="DiscountPrice" class="text-danger"></span>
        </div>
    <div class="row">
      <div class="form-check; mb--10 col-md-4">
            <input class="form-check-input" asp-for="IsFeatured">
            <label class="form-check-label" asp-for="IsFeatured">
                IsFeature
            </label>
            <span asp-validation-for="IsFeatured" class="text-danger"></span>
        </div>
      <div class="form-check mb--10 col-md-4">
            <input class="form-check-input" asp-for="IsNew">
            <label class="form-check-label" asp-for="IsNew">
                IsNew
            </label>
            <span asp-validation-for="IsNew" class="text-danger"></span>
      </div>
      <div class="form-check mb--10 col-md-4">
            <input class="form-check-input" asp-for="IsAviable">
            <label class="form-check-label" asp-for="IsAviable">
                IsAviable
            </label>
            <span asp-validation-for="IsAviable" class="text-danger"></span>
      </div>
    </div>
      <div class="row">
        <div class="mb-3 col-md-3">
                <label asp-for="GenreId" class="form-label">GenreId</label>
                <select class="form-select" asp-for="GenreId" asp-items="@(new SelectList(ViewBag.genres,"Id","Name"))">
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </select>
        </div>
        <div class="mb-3 col-md-3">
                <label asp-for="AuthorId" class="form-label">AuthorId</label>
                <select class="form-select" asp-for="AuthorId" asp-items="@(new SelectList(ViewBag.authors,"Id","FullName"))">
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </select>
        </div>
      </div>
        <div style="margin-bottom:20px">
            <label asp-for="ImagesPoster" class="form-label">ImagesPoster</label>
            <input class="form-control" id="ImagesPoster" asp-for="ImagesPoster">
            <span asp-validation-for="ImagesPoster" class="text-danger"></span>
        </div>
        <div style="margin-bottom:20px">
            <label asp-for="ImagesHover" class="form-label">ImagesHover</label>
            <input class="form-control" id="ImagesHover" asp-for="ImagesHover">
            <span asp-validation-for="ImagesHover" class="text-danger"></span>
        </div>
        <div style="margin-bottom:20px">
            <label asp-for="ImagesFiles" class="form-label">ImageFiles</label>
            <input class="form-control" id="ImageFiles" asp-for="ImagesFiles">
            <span asp-validation-for="ImagesFiles" class="text-danger"></span>
        </div>

    </div>
        <div style="display:flex; align-items:center; justify-content:center">
        <button type="submit" class="btn btn-primary">Create Book</button>
    </div>
</form>



